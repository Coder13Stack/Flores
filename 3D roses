<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Para ti üåπ</title>
    <style>
        body { margin: 0; overflow: hidden; background-color: #000; font-family: 'Arial', sans-serif; }
        
        #ui-container {
            position: absolute; top: 0; left: 0; width: 100%; height: 100vh;
            display: flex; flex-direction: column; justify-content: center; align-items: center;
            z-index: 10; pointer-events: none;
            background: radial-gradient(circle, transparent 0%, #000 90%);
        }

        .card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            padding: 40px;
            border-radius: 20px;
            text-align: center;
            border: 1px solid rgba(255, 255, 255, 0.2);
            pointer-events: auto;
            max-width: 90%;
        }

        h1 { color: #ff69b4; font-size: 2.5rem; margin: 0 0 20px 0; text-shadow: 0 0 10px #ff1493; }
        
        button {
            padding: 12px 30px; font-size: 1.2rem; border: none; border-radius: 50px;
            margin: 10px; cursor: pointer; transition: transform 0.2s; font-weight: bold;
        }

        #btnSi { background: #ff1493; color: white; box-shadow: 0 0 15px #ff1493; }
        #btnSi:hover { transform: scale(1.1); }
        #btnNo { background: white; color: black; }

        #loading {
            position: fixed; bottom: 20px; right: 20px; color: white;
            font-size: 0.8rem; opacity: 0.5;
        }

        .hidden { display: none !important; }
    </style>
</head>
<body>

    <div id="ui-container">
        <div id="pregunta" class="card">
            <h1>¬øMe quieres? üåπ</h1>
            <button id="btnSi">¬°S√≠! ‚ù§Ô∏è</button>
            <button id="btnNo">No</button>
        </div>
        
        <div id="mensaje" class="card hidden">
            <h1 style="color: white;">¬°Te quiero mucho! üíñ</h1>
            <p style="color: #ffb7c5;">Eres mi universo...</p>
        </div>
    </div>

    <div id="loading">Cargando magia...</div>

    <script type="module">
        import * as THREE from 'https://unpkg.com/three@0.128.0/build/three.module.js';
        import { GLTFLoader } from 'https://unpkg.com/three@0.128.0/examples/jsm/loaders/GLTFLoader.js';

        // Variables
        let scene, camera, renderer, stars;
        let roses = [];
        let mixer;
        let clock = new THREE.Clock();
        let bouquetGroup = new THREE.Group();
        let modelLoaded = false;
        let roseModel = null;

        // Iniciar
        init();
        animate();

        function init() {
            // Escena
            scene = new THREE.Scene();
            scene.fog = new THREE.FogExp2(0x000000, 0.002);

            // C√°mara
            camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
            camera.position.z = 5;

            // Renderizador
            renderer = new THREE.WebGLRenderer({ antialias: true });
            renderer.setSize(window.innerWidth, window.innerHeight);
            renderer.setPixelRatio(window.devicePixelRatio);
            // Habilitar sombras y correcci√≥n de color para que el modelo se vea bien
            renderer.outputEncoding = THREE.sRGBEncoding;
            renderer.toneMapping = THREE.ACESFilmicToneMapping;
            document.body.appendChild(renderer.domElement);

            // Luces (Importante para modelos 3D reales)
            const ambientLight = new THREE.AmbientLight(0xffffff, 0.7);
            scene.add(ambientLight);
            
            const spotLight = new THREE.SpotLight(0xff1493, 2);
            spotLight.position.set(5, 10, 5);
            scene.add(spotLight);
            
            const pointLight = new THREE.PointLight(0xffffff, 1);
            pointLight.position.set(0, 2, 3);
            scene.add(pointLight);

            // Crear Estrellas
            createStars();

            // Cargar el Modelo 3D externo
            loadRoseModel();

            // Eventos botones
            document.getElementById('btnSi').addEventListener('click', startShow);
            
            const btnNo = document.getElementById('btnNo');
            btnNo.addEventListener('mouseover', () => {
                const x = (Math.random() - 0.5) * 300;
                const y = (Math.random() - 0.5) * 300;
                btnNo.style.transform = `translate(${x}px, ${y}px)`;
            });

            window.addEventListener('resize', onWindowResize);
        }

        function createStars() {
            const geometry = new THREE.BufferGeometry();
            const vertices = [];
            for (let i = 0; i < 5000; i++) {
                vertices.push((Math.random() - 0.5) * 100);
                vertices.push((Math.random() - 0.5) * 100);
                vertices.push((Math.random() - 0.5) * 100);
            }
            geometry.setAttribute('position', new THREE.Float32BufferAttribute(vertices, 3));
            const material = new THREE.PointsMaterial({ color: 0xffffff, size: 0.05, transparent: true });
            stars = new THREE.Points(geometry, material);
            scene.add(stars);
        }

        function loadRoseModel() {
            const loader = new GLTFLoader();
            
            // AQU√ç BUSCA EL ARCHIVO 'rosa.glb'
            loader.load(
                './rosa.glb', 
                function (gltf) {
                    roseModel = gltf.scene;
                    
                    // Ajustar tama√±o del modelo original si es muy grande o chico
                    // Esto depende del modelo que descargues, a veces hay que cambiar este 0.5
                    roseModel.scale.set(0.5, 0.5, 0.5); 
                    
                    modelLoaded = true;
                    document.getElementById('loading').innerText = "¬°Todo listo!";
                    setTimeout(() => document.getElementById('loading').style.display = 'none', 2000);
                },
                function (xhr) {
                    const percent = (xhr.loaded / xhr.total * 100);
                    document.getElementById('loading').innerText = 'Cargando rosas: ' + Math.round(percent) + '%';
                },
                function (error) {
                    console.error(error);
                    document.getElementById('loading').innerText = "Error: No encontr√© el archivo 'rosa.glb'";
                    document.getElementById('loading').style.color = "red";
                }
            );
        }

        function createBouquet() {
            if (!roseModel) return;

            scene.add(bouquetGroup);

            // Crear 100 rosas clonadas del modelo original
            for (let i = 0; i < 80; i++) {
                const roseClone = roseModel.clone();
                
                // Distribuci√≥n en esfera
                const phi = Math.acos(-1 + (2 * i) / 80);
                const theta = Math.sqrt(80 * Math.PI) * phi;
                
                const r = 2.5; // Radio del ramo
                
                roseClone.position.setFromSphericalCoords(r, phi, theta);
                roseClone.lookAt(0, 0, 0); // Que miren al centro
                
                // Rotaci√≥n aleatoria para que no se vean todas iguales
                roseClone.rotateZ(Math.random() * Math.PI);
                
                // Escala inicial 0 para animaci√≥n
                roseClone.scale.set(0, 0, 0);
                
                // Guardamos datos para animar
                roseClone.userData = {
                    finalScale: 0.3 + Math.random() * 0.3, // Tama√±o variado
                    delay: Math.random() * 2 // Retraso aleatorio
                };

                bouquetGroup.add(roseClone);
                roses.push(roseClone);
            }
        }

        function startShow() {
            if (!modelLoaded) {
                alert("Espera un segundo, las flores a√∫n se est√°n cargando...");
                return;
            }

            document.getElementById('pregunta').classList.add('hidden');
            document.getElementById('mensaje').classList.remove('hidden');

            createBouquet();

            // Acercar c√°mara
            let z = 5;
            const zoomInt = setInterval(() => {
                z -= 0.02;
                camera.position.z = z;
                if (z <= 3) clearInterval(zoomInt);
            }, 20);
        }

        function animate() {
            requestAnimationFrame(animate);

            const delta = clock.getDelta();

            // Rotar galaxia
            if (stars) {
                stars.rotation.y += 0.0005;
                stars.rotation.x += 0.0002;
            }

            // Animaci√≥n del ramo
            if (bouquetGroup) {
                bouquetGroup.rotation.y += 0.002;
                
                // Animar aparici√≥n de cada rosa
                roses.forEach(rose => {
                    if (rose.userData.delay > 0) {
                        rose.userData.delay -= delta;
                    } else {
                        // Crecer suavemente
                        if (rose.scale.x < rose.userData.finalScale) {
                            rose.scale.x += 0.01;
                            rose.scale.y += 0.01;
                            rose.scale.z += 0.01;
                        }
                    }
                });
            }

            renderer.render(scene, camera);
        }

        function onWindowResize() {
            camera.aspect = window.innerWidth / window.innerHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth, window.innerHeight);
        }
    </script>
</body>
</html>
